---
import { BUDGET_MASTER_LANDING_URL } from "@constants";
import Layout from "@layouts/Layout.astro";
import FAQs from "@templates/FAQs.astro";
import Footer from "@templates/Footer.astro";
import HowWeHelp from "@templates/HowWeHelp.astro";
import MainBanner from "@templates/MainBanner.astro";
import Solution from "@templates/Solution.astro";
import WhyUs from "@templates/WhyUs.astro";
---

<link
  rel="preload"
  slot="preload-image"
  fetchpriority="high"
  as="image"
  href="/img/main-banner-tablet.webp"
  type="image/webp"
/>
<Layout
  title="Budget Master: Controla tus gastos ahora"
  metaDescription="Controla tus finanzas con Budget Master, la mejor app de finanzas personales gratis. Registra gastos, organiza tu dinero y ahorra fácilmente."
  ogTitle="Budget Master | Home"
  ogDescription="Budget Master: es una aplicación web que te ayuda a administrar tus finanzas personales de manera fácil y efectiva."
  ogURL={BUDGET_MASTER_LANDING_URL}
  hrefCanonical={BUDGET_MASTER_LANDING_URL}
>
  <MainBanner />
  <HowWeHelp />
  <Solution />
  <WhyUs />
  <FAQs />
  <Footer />
</Layout>
