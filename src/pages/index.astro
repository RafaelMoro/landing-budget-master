---
import AnchorButton from "@components/AnchorButton.astro";
import Layout from "@layouts/Layout.astro";
import Header from "@templates/Header.astro";
---

<Layout title="Budget Master">
  <div class="bg">
    <main
      class="max-w-7xl mx-auto flex flex-col justify-center items-center h-[800px]"
    >
      <Header />
      <h2 class="text-xl mb-5 text-center text-p-white">
        ¿Estás cansado de perder el control de tu dinero? ¿Te sientes abrumado
        por las deudas y los gastos? ¡Budget Master es la solución que
        necesitas!
      </h2>
      <AnchorButton text="Empieza ahora" hrefSrc="#" />
    </main>
  </div>
</Layout>

<style>
  .bg {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
      image-set(url("/img/banner-tablet.webp"));
    background-position: center right;
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
  }
  @media (mind-width: 768px) {
    .bg {
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
        image-set(url("./img/banner-tablet.webp", type="image/webp"));
    }
  }
  @media (mind-width: 1024px) {
    .bg {
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
        image-set(url("./img/banner-desktop.webp", type="image/webp"));
    }
  }
</style>
