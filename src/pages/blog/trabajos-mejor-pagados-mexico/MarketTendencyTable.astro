---
export interface Props {
  industries: string;
  cities: string;
  expAverage: string;
  previousPositions: string;
  flexibleWorkPorcentage: string;
  genreDistribution: string;
}
const {
  industries,
  cities,
  expAverage,
  previousPositions,
  flexibleWorkPorcentage,
  genreDistribution,
} = Astro.props;
---

<div class="relative overflow-x-auto">
  <table
    class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400"
  >
    <thead
      class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
    >
      <tr>
        <th scope="col" class="px-6 py-3"> Tendencias del mercado laboral </th>
        <th scope="col" class="px-6 py-3"> </th>
      </tr>
    </thead>
    <tbody>
      <tr
        class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
      >
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Industrias con mayor demanda:
        </th>
        <td class="px-6 py-4">
          {industries}
        </td>
      </tr>
      <tr
        class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200"
      >
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Ciudades con más contrataciones:
        </th>
        <td class="px-6 py-4">
          {cities}
        </td>
      </tr>
      <tr class="bg-white dark:bg-gray-800">
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Promedio de experiencia:
        </th>
        <td class="px-6 py-4"> {expAverage} </td>
      </tr>
      <tr class="bg-white dark:bg-gray-800">
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Puestos previos comunes:
        </th>
        <td class="px-6 py-4">
          {previousPositions}
        </td>
      </tr>
      <tr class="bg-white dark:bg-gray-800">
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Opciones de trabajo flexible:
        </th>
        <td class="px-6 py-4">
          {flexibleWorkPorcentage}
        </td>
      </tr>
      <tr class="bg-white dark:bg-gray-800">
        <th
          scope="row"
          class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"
        >
          Distribución por género:
        </th>
        <td class="px-6 py-4">
          {genreDistribution}
        </td>
      </tr>
    </tbody>
  </table>
</div>
