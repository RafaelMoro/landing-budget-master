---
import "@fontsource/roboto";
import "@fontsource/russo-one";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- TODO: Add meta description -->
    <meta
      name="description"
      content="Budget Master: Toma control de tus finanzas hoy."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Budget Master" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://budget-master.space/" />
    <meta property="og:locale" content="es_ES" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    min-width: 0;
    font: inherit;
  }
  :root {
    --color-primary: #b16841;
    --main-analogous: #b14152;
    --white: #fbfbfb;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    min-height: 100vh;
    font-family: "Roboto";
  }
  /* roboto-latin-300-normal */
  @font-face {
    font-family: "Roboto";
    font-style: normal;
    font-display: swap;
    font-weight: 300;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/roboto@latest/latin-300-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* roboto-latin-400-normal */
  @font-face {
    font-family: "Roboto";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/roboto@latest/latin-400-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  /* roboto-latin-700-normal */
  @font-face {
    font-family: "Roboto";
    font-style: normal;
    font-display: swap;
    font-weight: 700;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/roboto@latest/latin-700-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }
  /* russo-one-latin-400-normal */
  @font-face {
    font-family: "Russo One";
    font-style: normal;
    font-display: swap;
    font-weight: 400;
    src: url(https://cdn.jsdelivr.net/fontsource/fonts/russo-one@latest/latin-400-normal.woff2)
      format("woff2");
    unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
      U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
      U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
  }

  .logo {
    font-family: "Russo One";
  }
  img,
  video,
  svg {
    display: block;
    height: auto;
    max-width: 100%;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    text-wrap: balance;
  }
  p {
    text-wrap: pretty;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translate3d(0, 50%, 0);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }
  @media (min-width: 768px) {
    .fade-in-up {
      animation: fadeInUp linear forwards;
      animation-duration: 0.3s;
    }
  }
  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translate3d(-50%, 0, 0);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }

  @media (min-width: 768px) {
    .fade-in-left {
      animation: fadeInLeft linear forwards;
      animation-duration: 0.3s;
    }
  }
  @keyframes fadeInRight {
    0% {
      opacity: 0;
      transform: translate3d(50%, 0, 0);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }
  @media (min-width: 768px) {
    .fade-in-right {
      animation: fadeInRight linear forwards;
      animation-duration: 0.3s;
    }
  }
</style>
